<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView

        app:cardCornerRadius="0dp"
        android:background="@drawable/back_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_avata"
                android:src="@drawable/a"
                android:layout_alignParentTop="true"
                android:layout_width="70dp"
                android:layout_height="70dp" />
            <TextView
                android:id="@+id/tv_nick"
                android:text="ten_avt"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_avata" />
            <TextView
                android:id="@+id/tv_status"
                android:text="sờ ta tút"
                android:layout_below="@id/img_avata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/img_pic"
                android:src="#16f4e1"
                android:layout_below="@id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_below="@id/img_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_like"
                    android:src="@drawable/like"
                    android:background="@drawable/back_button"
                    android:layout_weight="1"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <ImageView
                    android:src="@drawable/coment"
                    android:background="@drawable/back_button"
                    android:layout_weight="1"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <ImageView
                    android:src="@drawable/share"
                    android:background="@drawable/back_button"
                    android:layout_weight="1"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>