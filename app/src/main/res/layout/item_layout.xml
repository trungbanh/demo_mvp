<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="0dp"
    android:background="@drawable/back_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ededed">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fefefe">
            <ImageView
                android:id="@+id/img_avata"
                android:src="@drawable/a"
                android:layout_alignParentTop="true"
                android:layout_width="70dp"
                android:layout_height="70dp" />
            <TextView
                android:id="@+id/tv_nick"
                android:text="ten_avt"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_avata" />
        </LinearLayout>

        <TextView
            android:padding="5dp"
            android:background="#fefefe"
            android:id="@+id/tv_status"
            android:text="sờ ta tút"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/img_pic"
            android:src="#00ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="1dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:weightSum="3">
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_centerVertical="true"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/img_like"
                    android:src="@drawable/like"
                    />
                <TextView
                    android:textColor="#000"
                    android:paddingLeft="60dp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:text="Like"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>
            <Button
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:drawableLeft="@drawable/ic_coment"
                android:drawableStart="@drawable/ic_coment"
                android:text="Comment"
                android:background="#ffffff"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Button
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:drawableLeft="@drawable/ic_share_black_24dp"
                android:drawableStart="@drawable/ic_share_black_24dp"
                android:text="Share"
                android:textAllCaps="false"
                android:background="#ffffff"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
